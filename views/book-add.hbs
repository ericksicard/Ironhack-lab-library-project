<form action="/books/add" method="post">
  <label for="book-title">Title:</label>
  <input type="text" id="book-title" name="title">

  <label for="book-author">Author:</label>
  <select name="author" id="book-author">
    <option disable selected value=""></option>
    {{#each availableAuthors}}
      <option value="{{this._id}}"> {{this.name}} {{ this.lastName }} </option>
    {{/each}}
  </select>

  <label for="book-description">Description:</label>
  <input type="text" id="book-description" name="description">

  <label for="book-rate">Rate:</label>
  <input type="number" id="book-rate" name="rating">

  <button type="submit">Add</button>
</form>